<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="650"
        x:Class="IT_AMS.MainMenuAssetDetailsWindow"
        Title="User and Asset Details" Width="1200" Height="650" Background="#F1F1F1" WindowStartupLocation="CenterScreen"
        Icon="../img/asset.png" CanResize="False">
        
        
        <!-- Main Grid -->
        <Grid ColumnDefinitions="20, *, 10, *, 20" RowDefinitions="20, 50, 2, *, 20">
                
                <!-- Title -->
                <Label Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" FontSize="30" FontWeight="Bold"
                       HorizontalAlignment="Center" VerticalAlignment="Center" Content="User and Asset Details"/>
                
                <Separator Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3"/>
                
                <!-- Left Stack Panel -->
                <StackPanel Grid.Column="1" Grid.Row="3" HorizontalAlignment="Center" Margin="0,30">
                    <Grid ColumnDefinitions="*, *" RowDefinitions="50, 50, 50, 50, 50, 50, 50, 50, 50">
                        <Label Grid.Column="0" Grid.Row="0" Content="Emp ID" VerticalAlignment="Center" />
                        <Label Grid.Column="0" Grid.Row="1" Content="Full Name" VerticalAlignment="Center"/>
                        <Label Grid.Column="0" Grid.Row="2" Content="Department" VerticalAlignment="Center"/>
                        <Label Grid.Column="0" Grid.Row="3" Content="Email" VerticalAlignment="Center"/>
                        <Label Grid.Column="0" Grid.Row="4" Content="Computer Type" VerticalAlignment="Center"/>
                        <Label Grid.Column="0" Grid.Row="5" Content="Computer Model" VerticalAlignment="Center"/>
                        <Label Grid.Column="0" Grid.Row="6" Content="Computer Name" VerticalAlignment="Center"/>
                        <Label Grid.Column="0" Grid.Row="7" Content="Serial" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Grid.Row="0" Height="30" Width="100" IsEnabled="False" HorizontalAlignment="Left" Margin="50,0,0,0"/>
                        <TextBox Grid.Column="1" Grid.Row="1" Height="30" Width="200" Margin="50,0,0,0"/>
                        <TextBox Grid.Column="1" Grid.Row="2" Height="30" Width="200" Margin="50,0,0,0"/>
                        <TextBox Grid.Column="1" Grid.Row="3" Height="30" Width="200" Margin="50,0,0,0"/>
                        <TextBox Grid.Column="1" Grid.Row="4" Height="30" Width="200" Margin="50,0,0,0"/>
                        <TextBox Grid.Column="1" Grid.Row="5" Height="30" Width="200" Margin="50,0,0,0"/>
                        <TextBox Grid.Column="1" Grid.Row="6" Height="30" Width="200" Margin="50,0,0,0"/>
                        <TextBox Grid.Column="1" Grid.Row="7" Height="30" Width="200" Margin="50,0,0,0"/>
                    </Grid>
                </StackPanel>
                
                <!-- Column Separator -->
                <Border Grid.Column="2" Grid.Row="3" Background="Gray" Width="2" Margin="10,0"/>
                
                <!-- Right Stack Panel -->
                <StackPanel Grid.Column="3" Grid.Row="3" HorizontalAlignment="Center" Margin="0,30">
                    <Grid ColumnDefinitions="*, *" RowDefinitions="50, 50, 50, 50, 50, 50, 50, 50, 50">
                        <Label Grid.Column="0" Grid.Row="0" Content="CPU" VerticalAlignment="Center" />
                        <Label Grid.Column="0" Grid.Row="1" Content="RAM" VerticalAlignment="Center"/>
                        <Label Grid.Column="0" Grid.Row="2" Content="Comments" VerticalAlignment="Center"/>
                        <Label Grid.Column="0" Grid.Row="3" Content="Sentinel One" VerticalAlignment="Center"/>
                        <Label Grid.Column="0" Grid.Row="4" Content="DNS Filter" VerticalAlignment="Center"/>
                        <Label Grid.Column="0" Grid.Row="5" Content="Mimecast" VerticalAlignment="Center"/>
                        <Label Grid.Column="0" Grid.Row="6" Content="M365 License" VerticalAlignment="Center"/>
                        <Label Grid.Column="0" Grid.Row="7" Content="Win Key" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Grid.Row="0" Height="30" Width="50" HorizontalAlignment="Left" Margin="50,0,0,0"/>
                        <TextBox Grid.Column="1" Grid.Row="1" Height="30" Width="50" HorizontalAlignment="Left" Margin="50,0,0,0"/>
                        <TextBox Grid.Column="1" Grid.Row="2" Height="30" Width="200" Margin="50,0,0,0"/>
                        <ComboBox Grid.Column="1" Grid.Row="3" Height="30" Width="80" Margin="50,0,0,0" VerticalAlignment="Center">
                            <ComboBoxItem Content="NO"/>
                            <ComboBoxItem Content="YES"/>
                        </ComboBox>
                        <ComboBox Grid.Column="1" Grid.Row="4" Height="30" Width="80" Margin="50,0,0,0" VerticalAlignment="Center">
                            <ComboBoxItem Content="NO"/>
                            <ComboBoxItem Content="YES"/>
                        </ComboBox>
                        <ComboBox Grid.Column="1" Grid.Row="5" Height="30" Width="80" Margin="50,0,0,0" VerticalAlignment="Center">
                            <ComboBoxItem Content="NO"/>
                            <ComboBoxItem Content="YES"/>
                        </ComboBox>
                        <TextBox Grid.Column="1" Grid.Row="6" Height="30" Width="200" Margin="50,0,0,0"/>
                        <TextBox Grid.Column="1" Grid.Row="7" Height="30" Width="200" Margin="50,0,0,0"/>
                    </Grid>
                </StackPanel>
                
                
        </Grid>
        
        
        
        
        
</Window>
